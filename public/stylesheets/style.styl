body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF


#incoming 
	width 400px
	height 300px
	overflow scroll
	border solid 1px #333

#outgoing 
	width 400px
	height 50px
	overflow scroll
	border solid 1px #ccc

.group:after 
  content: "";
  display: table;
  clear: both;

.left
	text-align left
	margin-left 10px

.right
	text-align right
	margin-right 10px

.system
	font-family courier
	background #b4e0ec